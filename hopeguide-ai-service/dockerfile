FROM python:3.10-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8000

# Use Gunicorn with multiple Uvicorn workers for concurrency
# 5 workers Ã— 2 threads = ~10 concurrent requests
CMD ["gunicorn", "app:app", "-k", "uvicorn.workers.UvicornWorker", "--workers", "1", "--threads", "1", "--bind", "0.0.0.0:8000", "--timeout", "120"]

